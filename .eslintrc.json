{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {"sourceType": "module"},
    "rules": {
        "indent": ["error",4],
        "linebreak-style": ["error","unix"],
        "quotes": ["error","double"],
        "no-console": ["warn"],
        "no-unused-vars": ["warn"],
        "no-useless-escape": [0],
        "semi": [0],
        "no-debugger": [1],
        "no-trailing-spaces": [0]
    },
    "globals": {
        "moment": true,
        "professionalHistory": true,
        "blogObjectFactory": true,
        "lastId": true,
        "produceBlogDatabase": true,
        "projectString": true,
        "$": true,
        "firebase": true
    }
}